  <%= javascript_include_tag "celebs" %>

<div class="divProfile">
    

  <div class="divImg"><img src="<%= @celeb.profileImgUrl %>" alt=""/> </div>
    
    <div class="profile-content">
      <div class="divName"><%= @celeb.name %></div>
      <div><span style="color:#2F7A26;">Tags:
    <%@celeb.tags.each do |tag| %>
        <i><%=  tag.to_s %></i>
        <% end %>
      </span>
      </div>
      </div>
      <div style="clear:both"></div>
    
  <div class="left column1">
    <%=  render :partial => "celebs/feed", :locals =>{ :tweets =>  @tweets ,:url=> feed_celebs_path(@celeb,:time => @tweets.to_a.last.time)} %>
            </div>
          <div class="left column2">
            <div style="color:#000;padding:10px" class="ui-corner-all">
   <span style="color:red"><%=Tweet.today %></span> total tweets from celebs today !  <br /> <br />
                    <span style="color:red"> <%= FanTweet.today %></span> total celeb mentions today !<br />
</div>
  <div style="margin-top:10px">
    <span style="color:#2F7A26;font-weight:bold"> Recent Fan Replies :</span>  <br />
            <%=  render :partial => "tweets/fanfeed", :locals =>{ :tweets =>  @fantweets ,:url=> fanfeed_tweets_path(:time => @fantweets.to_a.last.time) } %>
            </div>
            </div>
            <div class="clr"></div>
  </div>