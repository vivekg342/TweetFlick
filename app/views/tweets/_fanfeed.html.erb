<% require 'rails_autolink' %>
<ul class="divScrollable jcarousel-skin-fan">
<%  tweets.each do |tweet|%>
<% unless tweet.nil? %>
<li class="divFan divTweet ui-corner-all">
  <div class="divImg"><a target="_blank" href="http://twitter.com/<%= tweet.screenName %>"><img width="32" height="32" src="<%= tweet.profileImgUrl %>" alt="" /></a></div>
  <div class="tweetBody ui-corner-all" style="margin-left:40px;">
    <div class="divName"><%= tweet.name %></div>
    

<div><%= raw auto_link(tweet.link_twitter_user,:link =>:urls, :sanitize => false,:html => {:target => "_blank" }) %></div>
<div class="divTime">Updated <span class="epoch"><%= tweet.time %></span></div>
<div style="height:20px">
<div class="links">
      <table><tbody>
        <tr>
          <td><%=  link_to "Follow" , follow_tweets_path(:id => tweet.fan_id),:remote=> true, :method => :post , :class=>'celeb_ajax' , 'data-type' => 'json' %> </td>
          <td><%=  link_to "Retweet" , retweet_tweets_path(:id => tweet.id),:remote=> true , :method => :post , :class=>'celeb_ajax',  'data-type' => 'json' %> </td>
          <td><a onclick="openTweetDialog(this,<%=  tweet.fan_id %>);">Reply</a> </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

</div>
<div style="clear:both"></div>

</li>
<%end%>
<%  end %>

</ul>
