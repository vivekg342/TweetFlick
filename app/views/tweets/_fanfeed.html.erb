<% require 'rails_autolink' %>

<%  tweets.each do |tweet|%>
<% unless tweet.nil? %>
<li class="divFan divTweet ui-corner-all">
  <div class="divImg"><a target="_blank" href="http://twitter.com/<%= tweet.screenName %>"><img width="32" height="32" src="<%= tweet.profileImgUrl %>" alt="" /></a></div>
  <div class="tweetBody ui-corner-all" style="margin-left:40px;">
    <div class="divName"><%= tweet.name %></div>
    

<div><%= raw auto_link(tweet.link_twitter_user,:link =>:urls, :sanitize => false,:html => {:target => "_blank" }) %></div>
<div class="divTime">Updated <span class="epoch"><%= tweet.time %></span><span class="ltime"></span></div>
<div style="height:20px">
<div class="links right">
          <%=  link_to image_tag("follow.png",:alt =>'follow',:width =>'18') , follow_tweets_path(:id => tweet.fan_id),:remote=> true, :method => :post , :class=>'celeb_ajax' , 'data-type' => 'json' %> 
          <%=  link_to image_tag("retweet.png",:alt =>'retweet',:width =>'18') , retweet_tweets_path(:id => tweet.id),:remote=> true , :method => :post , :class=>'celeb_ajax',  'data-type' => 'json' %> 
          <a onclick="openTweetDialog(this,<%=  tweet.fan_id %>);"><%=image_tag("reply.png",:alt =>'reply',:width =>'18')%></a>
  </div>
<input class="screenName" type="hidden" value="<%=tweet.screenName%>" name=""/>
</div>

</div>
<div style="clear:both"></div>

</li>
<%end%>
<%  end %>
