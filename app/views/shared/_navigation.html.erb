<% if user_signed_in? %>
  <%unless current_user.image.nil? %>
   <div class="divImg">

     <img width="32" height="32" src="<%= current_user.image %>" alt="" style="border:none !important;box-shadow:none"/>

   </div>
<%end %>
<div style="margin-left:40px;margin-top:5px">
  <div style="font-weight:bold;color:black"><%= current_user.name %></div>
    <div> <%= link_to('Logout', signout_path) %> </div>
    

</div>
 
            <% else %>
        <div style="margin-top:5px;">         <%= link_to(image_tag('sign-in-with-twitter.png'), signin_path)  %>  </div>

                  <% end %>
        
